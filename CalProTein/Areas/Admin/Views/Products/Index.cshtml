@model IEnumerable<Product>

@{
        ViewData["Title"] = "Products";
}

<h2>Produkter</h2>

<p>
        <a asp-action="Create">Lägg Till Produkt</a>
</p>

<table class="table">
        <thead>
                <tr>
                        <th>Namn</th>
                        <th>Kalorier</th>
                        <th>Protein</th>
                        <th>Kategori</th>
                        <th></th>
                </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                                <td>
                                        @item.Name
                                </td>
                                <td>
                                        @item.Cal.ToString()
                                </td>
                <td>
                    @item.Protein.ToString()
                </td>
                                <td>
                                        @item.Category.Name
                                </td>
                                <td>
                                     
                                </td>
                                <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Radera</a>
                                </td>
                        </tr>
                }
        </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="/admin/products/@ViewBag.CategorySlug"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
        </pagination>
</div>